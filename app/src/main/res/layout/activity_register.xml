<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_login"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="198dp"
            android:layout_height="69dp"
            android:layout_below="@id/TL_pass"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="101dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="111dp"
            android:background="@drawable/bg_buttonregistermain"
            android:shadowColor="#CC000000"
            android:text="Đăng ký"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_marginTop="70dp"
            android:paddingBottom="40dp"
            android:text="Tài khoản"
            android:textColor="#C4C4C4"
            android:textSize="50sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TL_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TL_sdt"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:background="@drawable/bg_inputtest"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColorHint="#C4C4C4">

            <EditText
                android:id="@+id/emailEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingTop="30dp"
                android:textColor="@color/colorWhite" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TL_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TL_email"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:background="@drawable/bg_inputtest"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColorHint="#C4C4C4">

            <EditText
                android:id="@+id/passwordEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:paddingTop="30dp"
                android:textColor="@color/colorWhite" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TL_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_regi"
            android:layout_gravity="center"
            android:background="@drawable/bg_inputtest"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColorHint="#C4C4C4">

            <EditText
                android:id="@+id/nameEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="Họ và tên"
                android:inputType="textPersonName"
                android:paddingTop="30dp"
                android:textColor="@color/colorWhite" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TL_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TL_name"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:background="@drawable/bg_inputtest"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColorHint="#C4C4C4">

            <EditText
                android:id="@+id/phoneEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:paddingTop="30dp"
                android:textColor="@color/colorWhite" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Đã có tài khoản?"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" Đăng nhập"
                    android:textColor="#FF0000"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>